<script>
  // Function to handle form submission for editing a post
  const queryParams = new URLSearchParams(window.location.search);
  const postId = queryParams.get('postId');

  // Get the form elements for title and body
  const postForm = document.getElementById("postForm");
  const postTitleInput = document.getElementById("postTitle");
  const postBodyInput = document.getElementById("postBody");

  // Get the posts from local storage
  const posts = JSON.parse(localStorage.getItem("posts")) || [];
  const postToEdit = posts.find(post => post.id === parseInt(postId));

  if (postToEdit) {
    // Pre-fill the form with the post's title and body
    postTitleInput.value = postToEdit.title;
    postBodyInput.value = postToEdit.body;
  }

  postForm.addEventListener("submit", function(event) {
    event.preventDefault();
    const title = postTitleInput.value;
    const body = postBodyInput.value;
    if (title.trim() && body.trim()) {
      // Update the post in local storage
      const updatedPosts = posts.map(post => {
        if (post.id === parseInt(postId)) {
          return {...post, title, body };
        }
        return post;
      });
      localStorage.setItem("posts", JSON.stringify(updatedPosts));
      // Redirect to the index page
      window.location.href = "index";
    } else {
      // Show an alert if the title or body is empty
      alert("Please enter both title and body.");
    }
  });
</script>
