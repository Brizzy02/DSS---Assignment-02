<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Simple Blog - Home</title>
</head>
<body>
<h1>Simple Blog</h1>

<div id="posts"></div>

<button onclick="showNewPostForm()">New Post</button>
<button onclick="signOut()">Sign Out</button>

<div id="newPostForm" style="display: none;">
 <h2>New Post</h2>
 <form id="postForm">
    <label for="postTitle">Title:</label><br>
    <input type="text" id="postTitle" name="postTitle"><br>
    <label for="postBody">Body:</label><br>
    <textarea id="postBody" name="postBody"></textarea><br>
    <button type="submit">Create Post</button>
 </form>
</div>

<script>
 const sessionId = '<%= sessionId %>';
 console.log('Session ID:', sessionId);

 function signOut() {
    fetch('/signout', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
    })
    .then(response => {
      if (response.ok) {
        window.location.href = '/'; // Redirect to the index page
      } else {
        console.error('Sign out failed');
      }
    })
    .catch(error => console.error('Error:', error));
 }

 function renderPosts() {
    const posts = JSON.parse(localStorage.getItem("posts")) || [];
    const postsContainer = document.getElementById("posts");
    postsContainer.innerHTML = "";
    posts.forEach(post => {
      const postElement = document.createElement("div");
      postElement.innerHTML = `
        <h2>${post.title}</h2>
        <p>${post.body}</p>
        <button onclick="editPost(${post.id})">Edit</button>
        <button onclick="deletePost(${post.id})">Delete</button>
      `;
      postsContainer.appendChild(postElement);
    });
 }

 function editPost(postId) {
    window.location.href = `editpost?postId=${postId}`;
 }

 function deletePost(postId) {
    const posts = JSON.parse(localStorage.getItem("posts")) || [];
    const updatedPosts = posts.filter(post => post.id !== postId);
    localStorage.setItem("posts", JSON.stringify(updatedPosts));
    renderPosts();
 }

 function showNewPostForm() {
    document.getElementById("newPostForm").style.display = "block";
 }

 document.getElementById("postForm").addEventListener("submit", function(event) {
    event.preventDefault();
    const title = document.getElementById("postTitle").value;
    const body = document.getElementById("postBody").value;
    if (title.trim() && body.trim()) {
      const post = { id: Date.now(), title, body };
      const posts = JSON.parse(localStorage.getItem("posts")) || [];
      posts.push(post);
      localStorage.setItem("posts", JSON.stringify(posts));
      window.location.href = "home";
    } else {
      alert("Please enter both title and body.");
    }
 });

 renderPosts();
</script>

</body>
</html>
